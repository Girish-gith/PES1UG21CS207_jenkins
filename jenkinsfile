pipeline {
    agent any
    stages {
        stage('Clone repository') {
            steps {
                checkout([$class: 'GitSCM',
                    branches: [[name: '*/main']],
                    userRemoteConfigs: [[url:'https://github.com/Girish-gith/PES1UG21CS207_jenkins.git']]])
            }
        }
        stage('Build') {
            steps {
                sh 'g++ main.cpp -o output'
            }
        }
        stage('Test') {
            steps {
                sh './output'
            }
        }
        stage('Deploy') {
            steps {
                // Add deployment steps here
                echo 'Deploying...'
                // Example: scp output user@server:/path/to/deploy
            }
        }
    }

    post {
        failure {
            echo 'Pipeline failed'
        }
    }
}
